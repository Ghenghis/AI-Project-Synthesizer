{
  "general": {
    "theme": "dark",
    "language": "en",
    "auto_save": true,
    "notifications_enabled": true,
    "startup_check_updates": true,
    "log_level": "INFO",
    "output_directory": "G:/",
    "max_concurrent_tasks": 5
  },
  "voice": {
    "mode": "hotkey_toggle",
    "pause_detection": false,
    "pause_threshold_ms": 0,
    "max_recording_duration": 0,
    "provider": "elevenlabs",
    "voice_id": "rachel",
    "speed": 1.0,
    "stability": 0.5,
    "similarity_boost": 0.75,
    "auto_speak_responses": true,
    "speak_actions": true,
    "speak_errors": true,
    "stream_audio": true,
    "hotkey": "ctrl+shift+v",
    "hotkey_hold_mode": false
  },
  "automation": {
    "auto_continue_mode": "on_completion",
    "auto_continue_delay_ms": 500,
    "auto_fix_errors": true,
    "auto_retry_failed": true,
    "max_retries": 3,
    "auto_run_workflows": true,
    "auto_health_check": true,
    "health_check_interval_s": 300,
    "auto_execute_suggestions": false,
    "require_confirmation": true,
    "background_research": true,
    "background_indexing": true
  },
  "hotkeys": {
    "voice_toggle": "ctrl+shift+v",
    "voice_push_to_talk": "ctrl+space",
    "voice_cancel": "escape",
    "quick_search": "ctrl+shift+s",
    "quick_assemble": "ctrl+shift+a",
    "quick_chat": "ctrl+shift+c",
    "open_settings": "ctrl+,",
    "open_dashboard": "ctrl+shift+d",
    "pause_automation": "ctrl+shift+p",
    "resume_automation": "ctrl+shift+r",
    "emergency_stop": "ctrl+shift+escape"
  },
  "ai_ml": {
    "primary_provider": "lmstudio",
    "fallback_provider": "ollama",
    "cloud_fallback": false,
    "default_model": "",
    "temperature": 0.7,
    "max_tokens": 4096,
    "context_window": 8192,
    "include_system_context": true,
    "enable_function_calling": true,
    "enable_code_execution": false,
    "enable_web_search": true,
    "enable_research_agent": true,
    "enable_synthesis_agent": true,
    "enable_voice_agent": true,
    "enable_automation_agent": true,
    "learn_from_feedback": true,
    "save_conversation_history": true
  },
  "workflows": {
    "n8n_enabled": true,
    "n8n_url": "http://localhost:5678",
    "n8n_auto_sync": true,
    "enable_scheduled_workflows": true,
    "research_schedule": "0 */6 * * *",
    "health_schedule": "*/5 * * * *",
    "parallel_workflows": 3,
    "workflow_timeout_s": 300,
    "collect_metrics": true,
    "metrics_retention_days": 30
  },
  "advanced": {
    "debug_mode": false,
    "verbose_logging": false,
    "cache_enabled": true,
    "cache_ttl_seconds": 3600,
    "require_api_key_confirmation": true,
    "sanitize_outputs": true,
    "experimental_features": false,
    "beta_agents": false
  }
}